# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build admin`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t admin`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system admin && \
          adduser --system -G admin admin

COPY dist/apps/admin admin
RUN chown -R admin:admin .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix admin --omit=dev -f install

CMD [ "node", "admin" ]
